<h1>Ajouter une équipe</h1>

<div class="card">
  <div class="card-header">
    <div class="text-header">Ajouter une équipe</div>
  </div>
  <div class="card-body">
    <%= simple_form_for(@sport, url: sports_path, method: :post) do |f| %>
      <%= f.input :name %>
      <%= f.input :teams %>
      <%= f.button :submit, class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-success">
    <%= flash[:notice] %>
  </div>
<% end %>
